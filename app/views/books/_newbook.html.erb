<h1>New book</h1>
  <%= form_with model: book, url: books_path do |f| %>
  <div class="form-group">
    <h4>Title</h4>
    <%= f.text_field :title , class: "form-control" %>
  </div>
  <div class="form-group">
    <h4>Opinion</h4>
    <%= f.text_area :body, rows: '3', cols: '20', class: "form-control" %><br>
    <%= f.submit "Create Book", class: "btn btn-success" %>
  </div>
  <% end %>