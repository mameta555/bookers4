
<div class="row">
  <div class="col-md-3">
    <%= render '/users/userinfo', user: @user %>
  
    <%= render '/books/newbook', book: @book %>
  </div>
  
    
  <div class="col-md-8 offset-1">
    <h1>Books</h1>
    <table class="table">
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
      <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.user.get_profile_image(100,100) %></td>
        <td>
          <%= link_to book_path(book) do %>
            <%= book.title %>
          <% end %>
        </td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>