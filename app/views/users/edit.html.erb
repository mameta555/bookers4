<div class="row">
  <div class="col-6 mx-auto">
    <h1>User info</h1>
    <% if @user.errors.any? %>
      <%= @user.errors.count %>error
      <ul>
        <%= @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <%= form_with model: @user, url: user_path(@user), method: :patch do |f| %>
    <div class="form-group">
      <h4>Name</h4>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <h4>Image</h4>
      <%= f.file_field :profile_image, accept: "image/*" %>
    </div>
    <div class="form-group">
      <h4>Introduction</h4>
      <%= f.text_area :introduction, class: "form-control" %><br>
      <%= f.submit 'Update User', class: "btn btn-secondary" %>
    </div>
      
    <% end %>
  </div>
</div>