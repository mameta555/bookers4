
<div class="row">
  <div class="col-md-3">
    <%= render 'users/userinfo', user: @user %>
    
    <%= render 'books/newbook', book: @book %>
  </div>
  
  <div class="col-md-8 offset-md-1">
    <h1>Books</h1>
    <table class="table">
      <tr>
        <th></th>
        <th>Title</th>
        <th colspan="3">Opinion</th>
        
        
      </tr>
      <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(book.user_id) do %>
              <%= image_tag book.user.get_profile_image(50,50) %><br>
              <%= book.user.name %>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(book.id) do %>
              <%= book.title %>
            <% end %>
          </td>
          <td colspan="3"><%= book.body %></td>
          
        </tr>
      <% end %>
    </table>
  </div>
</div>