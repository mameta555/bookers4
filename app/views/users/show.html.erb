<%= render 'users/userinfo', user: @user %>

<%= link_to edit_user_path(@user) do %>
  edit
<% end %>

<h1>New book</h1>
<%= form_with url: books_path(@book) do |f| %>
  <h5>Title</h5>
  <%= f.text_field :title %>
  <h5>Opinion</h5>
  <%= f.text_area :body %>
  <%= f.submit "Create Book" %>
<% end %>

<h1>Books</h1>
<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
</table>