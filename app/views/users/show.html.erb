<h1>User info</h1>
<table>
  <tr>
    <th>name</th>
    <th><%= @user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= @user.introduction %></th>
  </tr>
</table>
<%= link_to edit_user_path(@user) do %>
  edit
<% end %>

<h1>New book</h1>
<%= form_with url: books_path(@book) do |f| %>
  <h5>Title</h5>
  <%= f.text_field :title %>
  <h5>Opinion</h5>
  <%= f.text_area :body %>
  <%= f.submit "Create Book" %>
<% end %>
